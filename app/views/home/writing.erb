<main>
    <article>
        <h1>쓰기 페이지 입니당</h1>
            
            <section class="writ">
            
            <form action="/home/memoWrite" id="111">
                
                <select name="category">
                    <% @subjectList.each do |p|%>
                        <option value="<%= p.category %>"><%= p.category %></option>
                    <% end %>
                </select>
                
                <input type="date" name="bday"value="<%=Time.now.strftime("%Y-%m-%d")%>" ><br>
    
                <p><input type="text" name="title" placeholder="제목을 쓰세요">
                 즐겨찾기 :<input type="checkbox" name="favorite" value="1"></p>
                    
                <p><textarea rows="30" name="content" cols="100" placeholder="내용을 쓰세용"></textarea><p>
                <input type="submit">
            </form>
            
            </section>
            
        <p><a href = "/home/memolist">섭밋 했다치고</p>
    </article>
</main>

