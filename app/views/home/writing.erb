<main>
    <article>
        <h1>쓰기 페이지 입니당</h1>
            
            <section class="writ">
            
            <form action="/home/memoWrite" method="POST">
                
                <select name="category">
                    <% @subjectList.each do |p|%>
                        <option value="<%= p.category %>"><%= p.category %></option>
                    <% end %>
                </select>
                
                <input type="date" name="date" value="<%=Time.now.strftime("%Y-%m-%d")%>" ><br>
    
                <p><input type="text" name="title" class="title" placeholder="제목을 쓰세요">
                 즐겨찾기 :<input type="checkbox" name="favorite" value="1"></p>
                    
                <p><textarea rows="30" name="content" cols="100" placeholder="내용을 쓰세용"></textarea><p>
                <input type="submit">
            </form>
            
            </section>
            
        <p class="btn"><a href = "/home/memolist">돌아가기</a></p>
    </article>
</main>

<footer>
	<form action="/home/searchlist" method="GET">
    	<p>검색 :<input type="text" name="keyword" class="title" placeholder="검색하기"><input type="submit"></p>
    </form>
   <p class=btn><%= link_to "로그아웃", destroy_user_session_path, :method => :delete %></p>
</footer>














