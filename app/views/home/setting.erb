<main>
    <article>
        <h1>세팅 페이지 입니다.</h1>
        <section class="set_list">
            <p>지금 있는과목</p>
                
            <div>
            
                <% @subjectList.each do |p| %>
                <p><%=p.category%><a href="/home/setdel/<%=p.id%>">[삭제]</a></p>
                <% end %>
            </div>
        </section>

        <section class="set_listin">
            <form action="/home/setadd" method="GET">
                <p>과목 추가하기: <input type="text" name="newsub" placeholder="과목이름을 쓰시오"></p>
                <input type="submit" value="추가!">
            </form>
        </section>

        <section>
            <form>
                <p>저장된 이메일 : <%=@email%></p>
                <p>변경할 이메일 : <input type="text" name="fname" placeholder="아직 구현 안함"></p>
                <input type="submit" value="변경" disabled />
                <p class="btn"><a href = "/home/menu">돌아가기</a></p>
            </form>
        </section>
    </article>
</main>

<footer>
	<form action="/home/searchlist" method="GET">
    	<p>검색 :<input type="text" name="keyword" class="title" placeholder="검색하기"><input type="submit"></p>
    </form>
   <p class=btn><%= link_to "로그아웃", destroy_user_session_path, :method => :delete %></p>
</footer>













