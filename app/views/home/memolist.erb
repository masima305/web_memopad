<article>

	<section id="memolist">
		<h1>메모리스트 페이지입니다.</h1>
			<hr>
			<% predate = 0 %>
			<% @memolist.each do |p|%>
				<% if p.date != predate %>
					<h1><%= p.date %></h1>
					<% predate = p.date %>
				<% end %>
				<p><a href="/home/reading/<%=p.id%>"><%= p.title %></p>
			<% end %>
	</section>
	
    <p><a href="/home/menu">메뉴로</a></p>
</article>
